
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card-group">
        <div class="card p-4">
          <div class="card-body">
            <h1>БГЭУ</h1>
            <p class="text-muted">Войти в свой аккаунт</p>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="icon-user"></i>
                </span>
              </div>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>
            <div class="input-group mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="icon-lock"></i>
                </span>
              </div>
              <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
            </div>
            <div class="row">
              <div class="col-6">
                <button class="btn btn-primary px-4" type="submit">Войти</button>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <div class="card text-white py-5 d-md-down-none" style="width:44%">
          <div class="card-body text-center">
            <%= image_tag("logo-bseu.png") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

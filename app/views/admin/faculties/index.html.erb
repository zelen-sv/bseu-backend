<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <i class="fa fa-align-justify"></i> Список Факультетов
        <div class="card-header-actions">
          <%= button_to 'Новый факультет', new_admin_faculty_path, method: 'get', class: 'card-header-action btn btn-sm btn-primary' %>
        </div>
      </div>
      <div class="card-body">
        <table class="table table-responsive-sm">
          <thead>
            <tr>
              <th>Название</th>
              <th>Просмотр специальностей</th>
              <th>Действия</th>
            </tr>
          </thead>
          <tbody>
            <%= render @faculties %>
          </tbody>
        </table>
        <div id="pagination">
          <%= paginate @faculties %>
        </div>
      </div>
    </div>
  </div>
</div>

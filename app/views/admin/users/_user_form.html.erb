<%= simple_form_for [:admin, user], class: "form-horizontal" do |f| %>
  <div class="row">
    <div class="form-group col-md-12">
      <%= f.input :email, label: 'Email', input_html: { class: 'form-control' } %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-12">
      <%= f.input :password, label: 'Пароль', input_html: { class: 'form-control' } %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-12">
      <%= f.input :password_confirmation, label: 'Подтверждение пароля', input_html: { class: 'form-control' } %>
    </div>
  </div>
  <%= f.submit 'Сохранить' , class: "btn btn-sm btn-success" %>
<% end %>

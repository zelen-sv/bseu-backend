<div class="row">
  <%= render "specialty_filter", { specialties: @specialties_titles } %>
  <%= render "faculty_filter", { faculties: @faculties } %>
  <%= render "education_programm_filter" %>
  <%= render "education_form_filter" %>
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <i class="fa fa-align-justify"></i> Список Специальностей
        <div class="card-header-actions">
          <%= button_to 'Новая специальность', new_admin_specialty_path, method: 'get', class: 'card-header-action btn btn-sm btn-primary' %>
        </div>
      </div>
      <div class="card-body">
        <table class="table table-responsive-sm">
          <thead>
            <tr>
              <th>Название</th>
              <th>Факультет</th>
              <th>Программа</th>
              <th>Форма</th>
              <th>Действия</th>
            </tr>
          </thead>
          <tbody id="specialties_table">
            <%= render @specialties %>
          </tbody>
        </table>
        <div id="pagination">
          <%= paginate @specialties %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= simple_form_for [:admin, bid], class: "form-horizontal" do |f| %>
  <h4>Личная информация</h4>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.input :first_name, label: 'Имя', input_html: { class: 'form-control' }, disabled: disabled %>
    </div>
    <div class="form-group col-md-6">
      <%= f.input :second_name, label: 'Фамилия', input_html: { class: 'form-control' }, disabled: disabled %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-md-2 col-form-label">Пол</label>
    <div class="form-check form-check-inline mr-1">
      <%= f.radio_button :gender, 'male', class: 'form-check-input', disabled: disabled %>
      <%= label :gender_male, 'мужской', class: "form-check-label" %>
    </div>
    <div class="form-check form-check-inline mr-1">
      <%= f.radio_button :gender, 'female', class: 'form-check-input', disabled: disabled %>
      <%= label :gender_female, 'женский', class: "form-check-label" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.input :birthday, label: 'Дата рождения', input_html: { class: 'form-control', data: { provide: 'datepicker' } }, disabled: disabled %>
    </div>
    <div class="form-group col-md-6">
      <%= f.input :nationality, label: 'Гражданство', input_html: { class: 'form-control' }, disabled: disabled %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.input :email, label: 'Email', input_html: { class: 'form-control' }, disabled: disabled %>
    </div>
    <div class="form-group col-md-6">
      <%= f.input :phone, label: 'Телефон', input_html: { class: 'form-control' }, disabled: disabled %>
    </div>
  </div>
  <h4>Паспортные данные</h4>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.input :passport_id, label: 'Номер паспорта', input_html: { class: 'form-control' }, disabled: disabled %>
    </div>
    <div class="form-group col-md-6">
      <%= f.input :passport_authority, label: 'Орган выдавший паспорт', input_html: { class: 'form-control' }, disabled: disabled %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.input :passport_ends_at, label: 'Дата окончания паспорта', input_html: { class: 'form-control', data: { provide: 'datepicker' } }, disabled: disabled %>
    </div>
    <div class="form-group col-md-6">
      <%= f.input :passport_starts_at, label: 'Дата выдачи паспорта', input_html: { class: 'form-control', data: { provide: 'datepicker' } }, disabled: disabled %>
    </div>
  </div>
  <h4>Обучение</h4>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.input :education_type, label: 'Программа обучения', input_html: { class: 'form-control' }, disabled: disabled %>
    </div>
    <div class="form-group col-md-6">
      <%= f.input :education_form, label: 'Форма обучения', input_html: { class: 'form-control' }, disabled: disabled %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <label>Потребность в общежитии:</label>
      <%= f.check_box :hostel, class: "form-control", disabled: disabled %>
    </div>
    <div class="form-group col-md-6">
      <%= f.input :arrival_date, label: 'Предполагаемая дата въезда', input_html: { class: 'form-control', data: { provide: 'datepicker' } }, disabled: disabled %>
    </div>
  </div>
  <%= f.submit 'Сохранить' , class: "btn btn-sm btn-success", disabled: disabled %>
<% end %>
